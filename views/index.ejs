<!DOCTYPE html>
<html lang="en">
<head>  
  <script src="https://kit.fontawesome.com/504ea75c01.js" crossorigin="anonymous"></script>
  <meta charset="UTF-8">
  <meta property="og:image" content="https://www.gardeningknowhow.com/wp-content/uploads/2019/09/flower-color-400x391.jpg">
  <title>PALINDROME PALACE</title>
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
</head>
<body>
  <h3>KNOWN PALINDROMES</h3>
  <ul class="pals">
  <% for(var i=0; i<pals.length; i++) {%>
    <li class="word">
      <span><i class="fa-solid fa-caret-up" aria-hidden="true"></i></span>
      <span><%= pals[i].word %></span>
      <span class="sneaky"><%= pals[i].votes %></span>
      <span><i class="fa-solid fa-caret-down" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>
  <fieldset>
    <label>add your own</label>
    <form action="/pals/" method="POST">
      <input type="text" placeholder="your word here" name="word">
      <button type="submit">Submit</button>
    </form>
  </fieldset>
  <h4 id="verify"></h4>

  <script src="main.js"></script>

</body>
</html>
